@baseUrl = http://localhost:3000

# @name auth
GET http://localhost:3000/dev/token

### [auth] Create Payout Instruction
# @name paymentCreated
POST http://localhost:3000/stp-payment/create
Authorization: Bearer {{auth.response.body.token}}
Content-Type: application/json

{
    "corpId": "DSGRFB",
    "product": "USDEUR",
    "amount": 10
}

### [auth] Fixing Rates
# @name paymentFixedRates
PUT http://localhost:3000/stp-payment/rates
Authorization: Bearer {{auth.response.body.token}}
Content-Type: application/json

{
    "_id": "{{paymentCreated.response.body._id}}"
}


### [auth] Approved With Pricing
# @name paymentApprovedWithPricing
PUT http://localhost:3000/stp-payment/approve
Authorization: Bearer {{auth.response.body.token}}
Content-Type: application/json

{
    "_id": "{{paymentCreated.response.body._id}}"
}


### [auth] Approved With Pricing
# @name paymentProcessWithSOA
PUT http://localhost:3000/stp-payment/process
Authorization: Bearer {{auth.response.body.token}}
Content-Type: application/json

{
    "_id": "{{paymentCreated.response.body._id}}"
}


### [auth] Approved With Pricing
# @name paymentSettledWithSOA
PUT http://localhost:3000/stp-payment/settlement
Authorization: Bearer {{auth.response.body.token}}
Content-Type: application/json

{
    "_id": "{{paymentCreated.response.body._id}}",
    "paymentStatus": "SETTLED"
}

### [auth] Approved With Pricing
# @name paymentFailedWithSOA
PUT http://localhost:3000/stp-payment/settlement
Authorization: Bearer {{auth.response.body.token}}
Content-Type: application/json

{
    "_id": "{{paymentCreated.response.body._id}}",
    "paymentStatus": "FAILED"
}
